<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_shape">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_for_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="Leave a Review"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#5e6163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_for_review"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/item_shape_for_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_for_review"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/order_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_for_imageview"
            android:src="@drawable/boots1"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ordered_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/order_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/color_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/color_indicator_ordered_item"
            app:layout_constraintBottom_toBottomOf="@id/color_of_item"
            app:layout_constraintStart_toEndOf="@id/order_image"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/color_of_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Black  |  "
            android:textColor="#E3E2E1"
            android:textSize="9sp"
            app:layout_constraintBottom_toTopOf="@id/completed_button"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintTop_toBottomOf="@+id/ordered_item_name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty = 3"
            android:textSize="9sp"
            android:textColor="#E3E2E1"
            app:layout_constraintBottom_toTopOf="@id/completed_button"
            app:layout_constraintStart_toEndOf="@id/color_of_item"
            app:layout_constraintTop_toBottomOf="@+id/ordered_item_name"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/completed_button"
            android:layout_width="70dp"
            android:layout_height="21dp"
            android:layout_marginBottom="12dp"
            android:text="Completed"
            android:textSize="8sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/completed_for_reveiw_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            app:layout_constraintBottom_toTopOf="@id/price_of_item"
            app:layout_constraintTop_toBottomOf="@id/color_indicator"
            app:layout_constraintStart_toEndOf="@id/order_image"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price_of_item"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="$280.00"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@id/order_image"
            app:layout_constraintStart_toEndOf="@id/order_image"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#5e6163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_container"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_how_is_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="61dp"
        android:text="How is your order?"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_container"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E4E3E3"
        android:layout_marginTop="12dp"
        android:text="Please give your rating &amp; also your review..."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_how_is_order"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star_center"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/star"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star_1"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/star_center"
        android:background="@drawable/star"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star_2"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toEndOf="@id/star_1"
        app:layout_constraintEnd_toStartOf="@id/star_center"
        android:background="@drawable/star"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star_5"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toEndOf="@id/star_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/star"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/star_4"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        app:layout_constraintStart_toEndOf="@id/star_center"
        app:layout_constraintEnd_toStartOf="@id/star_5"
        android:background="@drawable/star"/>
    
    
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_field"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="12dp"
        android:paddingStart="12dp"
        android:textSize="15sp"
        android:background="@drawable/review_edittext_shape"
        android:hint="Very good product &amp; fast delivery"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/star_center"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#5e6163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_field"/>

    
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="160dp"
    android:layout_height="58dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="61dp"
    android:layout_marginBottom="30dp"
    android:text="Cancel"
    android:textAllCaps="false"
    android:backgroundTint="#35383F"
    android:textColor="@color/white"
    app:layout_constraintTop_toBottomOf="@id/input_field"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:backgroundTint="#FAFAFA"
        android:textColor="#0D131E"
        app:layout_constraintTop_toBottomOf="@id/input_field"
        app:layout_constraintEnd_toEndOf ="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>