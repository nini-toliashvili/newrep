<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address_container"
        android:layout_width="315dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/radio_button"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/address_container"
        app:layout_constraintTop_toTopOf="@id/address_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="SEND TO"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toTopOf="@id/address_container"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adddress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="my home"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toBottomOf="@id/send_to"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toBottomOf="@id/adddress_name"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_address"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/location"
        app:layout_constraintStart_toEndOf="@id/radio_button"
        app:layout_constraintTop_toTopOf="@id/address_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/edit"
        app:layout_constraintEnd_toEndOf="@id/address_container"
        app:layout_constraintTop_toTopOf="@id/address_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>