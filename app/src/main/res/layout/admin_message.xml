<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/admin_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="314dp"
        android:textSize="12sp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="30dp"
        android:padding="12dp"
        android:text="Hello, how can I help you"
        android:textColor="@color/black"
        android:background="@drawable/admin_message_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/admin_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:text="Today, 7:02pm"
        android:textColor="#B1B5C3"
        app:layout_constraintTop_toBottomOf="@id/admin_message_tv"
        app:layout_constraintStart_toStartOf="@id/admin_message_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>