<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/winner"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winner is"
        android:textColor="#A73636"
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:textAlignment="center"
        android:visibility="invisible"
        android:id="@+id/recycler_for_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE YOUR GAME !"
        android:textColor="#A73636"
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/g4x4"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/g3x3"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginBottom="150dp"
        android:text="3x3"
        android:background="#A73636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/g4x4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/g4x4"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:layout_marginBottom="150dp"
        android:textSize="23sp"
        android:text="4x4"
        android:background="#A73636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/g5x5"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginBottom="150dp"
        android:text="5x5"
        android:background="#A73636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/g4x4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>